citHeader("To cite epicrop in publications, please use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{epicrop}: Simulation modeling of rice crop diseases",
         author = c(person("Adam", "Sparks"),
                    person("Robert", "Hijmans"),
                    person("Serge", "Savary"),
                    person("Ireno", "Pangga"),
                    person("Jorel", "Aunario")),
         year = year,
         note = note,
         url = "https://github.com/adamhsparks/epicrop")
